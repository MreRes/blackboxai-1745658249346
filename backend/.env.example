# Application
NODE_ENV=development
PORT=3000
DEBUG=false
LOG_LEVEL=info

# Frontend URL
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Database
MONGODB_URI=mongodb://localhost:27017/whatsapp-financial-bot
MONGODB_TEST_URI=mongodb://localhost:27017/whatsapp-financial-bot-test

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# WhatsApp Web Configuration
WHATSAPP_SESSION_PATH=.wwebjs_auth
WHATSAPP_CLIENT_ID=financial-bot
WHATSAPP_HEADLESS=true

# Google Cloud (for Speech-to-Text)
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json
GOOGLE_PROJECT_ID=your-project-id

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_2FA_SECRET=your_2fa_secret_here

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# PDF Generation
PDF_TEMP_DIR=./temp/pdf
PDF_FONT_PATH=./assets/fonts

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100

# Notification Settings
NOTIFICATION_EMAIL=notifications@yourapp.com
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# External Services
CURRENCY_API_KEY=your_currency_api_key
WEATHER_API_KEY=your_weather_api_key

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_VOICE_MESSAGES=true
ENABLE_IMAGE_PROCESSING=true
ENABLE_AUTO_BACKUP=true
ENABLE_2FA=true

# Development Tools
ENABLE_DEBUG_LOGGING=true
ENABLE_API_DOCS=true
ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-webhook-url.com

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
ERROR_REPORTING_EMAIL=errors@yourapp.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Testing
TEST_USER_PHONE=+1234567890
TEST_USER_PASSWORD=testpass123

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Performance
MAX_CONCURRENT_OPERATIONS=10
REQUEST_TIMEOUT=30000
DB_CONNECTION_POOL_SIZE=10

# File Upload
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Localization
DEFAULT_LANGUAGE=id
SUPPORTED_LANGUAGES=id,en

# AI/ML Settings
NLP_MODEL_PATH=./models/nlp
MIN_CONFIDENCE_SCORE=0.7
ENABLE_SENTIMENT_ANALYSIS=true

# Cleanup Settings
LOG_RETENTION_DAYS=30
TEMP_FILE_CLEANUP_INTERVAL=86400  # 24 hours in seconds
USER_INACTIVE_THRESHOLD=90  # days

# Business Rules
MIN_TRANSACTION_AMOUNT=1000
MAX_TRANSACTION_AMOUNT=1000000000
MIN_BUDGET_PERIOD_DAYS=7
MAX_BUDGET_PERIOD_DAYS=365

# Custom Messages
WELCOME_MESSAGE="Selamat datang di Asisten Keuangan!"
HELP_MESSAGE="Ketik 'bantuan' untuk melihat panduan penggunaan."
ERROR_MESSAGE="Maaf, terjadi kesalahan. Silakan coba lagi nanti."
